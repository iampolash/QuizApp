<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <!--StatusBar color-->
        <item name="colorPrimaryDark">#00796B</item>
        <!--Primary color for inside app-->
        <item name="colorAccent">#3F51B5</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#CFD8DC</item>
    </style>

    <!--Main Layout Style-->
    <style name="relative_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#E0F2F1</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--Style For Heading-->
    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!--Default Style for Height and Width-->
    <style name="default_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--All Question Style-->
    <style name="questions_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--All radio Group style-->
    <style name="rdo_grp_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--Radio Button Style-->
    <style name="rdo_btn">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--Question 4 style-->
    <style name="txtView_Q4">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!--All CheckBox Style-->
    <style name="checkBox_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>
